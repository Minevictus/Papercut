diff --git a/src/main/java/net/minecraft/server/EntityLiving.java b/src/main/java/net/minecraft/server/EntityLiving.java
index 87cd6fb0c051e66d7c927769c375268c9a663ff8..9ef2e3cc4afb5be739f2d9c13465107a4bab21ac 100644
--- a/src/main/java/net/minecraft/server/EntityLiving.java
+++ b/src/main/java/net/minecraft/server/EntityLiving.java
@@ -81,10 +81,10 @@ public abstract class EntityLiving extends Entity {
     public int maxNoDamageTicks;
     public final float ay;
     public final float az;
-    public float aA;
+    public float aA; public final void setBodyYaw(float yaw) { this.aA = yaw; } // Papercut - OBFHELPER
     public float aB;
     public float aC;
-    public float aD;
+    public float aD; public final void setPrevHeadYaw(float yaw) { this.aD = yaw; } // Papercut - OBFHELPER
     public float aE;
     @Nullable
     public EntityHuman killer;
diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
index 1a72ab6d2424df9e25f98646712f4468bc70bc88..804cf5e84051617ddacb7dc44ff961fdec4e32ab 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
@@ -1169,4 +1169,22 @@ public abstract class CraftEntity implements org.bukkit.entity.Entity {
         return getHandle().isTicking();
     }
     // Paper end
+
+    // Papercut start
+    @Override
+    public void rawRotate(float yaw, float pitch) {
+        getHandle().yaw = yaw;
+        getHandle().pitch = pitch;
+    }
+
+    @Override
+    public void setRawInvisible(boolean visibility) {
+        getHandle().setInvisible(visibility);
+    }
+
+    @Override
+    public void setRawInvulnerable(boolean invulnerability) {
+        getHandle().setInvulnerable(invulnerability);
+    }
+    // Papercut end
 }
diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftLivingEntity.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftLivingEntity.java
index 9e9bdf9bc2e5c4d72d811fcb439628d946741324..d010cac5b77034902660ae56beae515e48942b54 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftLivingEntity.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftLivingEntity.java
@@ -809,4 +809,14 @@ public class CraftLivingEntity extends CraftEntity implements LivingEntity {
         getHandle().receive(((CraftItem) item).getHandle(), quantity);
     }
     // Paper end
+
+    // Papercut start
+    @Override
+    public void rawRotate(float yaw, float pitch) {
+        rawRotateClamped(yaw, pitch);
+        getHandle().setPrevHeadYaw(getHandle().yaw);
+        getHandle().setBodyYaw(getHandle().yaw);
+        // getHandle().aL = getHandle().yaw; // Why? This is flyingSpeed in yarn.
+    }
+    // Papercut end
 }
diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
index 98d99af9d8f16bf4ded7b01e5e38b495f971f06f..e087fe38731a4135c8816781bac777f135ade915 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -2212,4 +2212,18 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
         return spigot;
     }
     // Spigot end
+
+    // Papercut start
+    @Override
+    public void rawUpdateClientPassengers() {
+        if (getHandle().playerConnection == null) return;
+        getHandle().playerConnection.sendPacket(new net.minecraft.server.PacketPlayOutMount(getHandle()));
+    }
+
+    @Override
+    public void rawDestroyEntity(org.bukkit.entity.Entity entity) {
+        if (getHandle().playerConnection == null) return;
+        getHandle().playerConnection.sendPacket(new net.minecraft.server.PacketPlayOutEntityDestroy(entity.getEntityId()));
+    }
+    // Papercut end
 }
