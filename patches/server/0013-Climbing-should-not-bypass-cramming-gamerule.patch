-            if (!entity1.isCollidable()) {
+            if (!entity1.isCollidable(ignoreClimbing)) { // Papercut
                 return false;
             } else if (entity.world.isClientSide && (!(entity1 instanceof EntityHuman) || !((EntityHuman) entity1).ec())) {
                 return false;
