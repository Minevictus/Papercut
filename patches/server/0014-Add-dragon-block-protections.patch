+            || block == Blocks.IRON_BLOCK
+            || block == Blocks.NETHERITE_BLOCK
+            || block == Blocks.GOLD_BLOCK
+            || block == Blocks.EMERALD_BLOCK
+            || block == Blocks.BEACON;
