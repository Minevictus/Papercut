@@ -1546,4 +1546,18 @@ public interface Server extends PluginMessageRecipient {
     @NotNull
     com.destroystokyo.paper.entity.ai.MobGoals getMobGoals();
     // Paper end
+
+    // Papercut start
+    /**
+     * Returns `true`.
+     * <p>
+     * This must be wrapped in a try block catching `NoSuchMethodError`.
+     * </p>
+     *
+     * @return `true`
+     */
+    default boolean isPapercut() {
+        return true;
+    }
+    // Papercut end
 }
