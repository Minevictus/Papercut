--- a/src/main/java/org/bukkit/Bukkit.java
+++ b/src/main/java/org/bukkit/Bukkit.java
@@ -1776,4 +1776,18 @@ public final class Bukkit {
     public static Server.Spigot spigot() {
         return server.spigot();
     }
+
+    // Papercut start
+    /**
+     * Returns `true`.
+     * <p>
+     * This must be wrapped in a try block catching `NoSuchMethodError`.
+     * </p>
+     *
+     * @return `true`
+     */
+    public static boolean isPapercut() {
+        return server.isPapercut();
+    }
+    // Papercut end
 }
diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 8263a155803f8807a2d3c988df11abdab767be9c..2a4ff68d761b86e72daf431fc4aafe7b301a0fa3 100644
